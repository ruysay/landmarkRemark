<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/d_din</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>


    <!-- Fullscreen activity theme. -->
    <style name="Fullscreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="MainActivity" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <!-- TextInputLayout -->
    <style name="TextInputLayout" parent="@style/Widget.Design.TextInputLayout">
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:colorControlNormal">@color/hint</item>
        <item name="android:colorControlActivated">@color/light_blue</item>
        <item name="android:fontFamily">@font/d_din</item>
    </style>

    <!-- TextInputLayout's label -->
    <style name="TextInputLayout.Label">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <!-- Custom button style. -->
    <style name="Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:paddingStart">@dimen/padding_xlarge</item>
        <item name="android:paddingEnd">@dimen/padding_xlarge</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Small buttons -->
    <style name="Button.Small" parent="Button">
        <item name="android:layout_height">@dimen/button_small_height</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>
    </style>

    <!-- Back button -->
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <!-- Custom AlertDialogs -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogTheme.ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogTheme.ButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertDialogTheme.ButtonStyle</item>
    </style>

    <style name="AlertDialogTheme.StrongNegative" parent="AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogTheme.StrongNegative.ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogTheme.Neutral.ButtonStyle</item>
    </style>

    <style name="AlertDialogTheme.StrongPositive" parent="AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogTheme.StrongPositive.ButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogTheme.Neutral.ButtonStyle</item>
    </style>

    <!-- Custom AlertDialogs Button -->
    <style name="AlertDialogTheme.ButtonStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/d_din_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AlertDialogTheme.StrongPositive.ButtonStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/d_din_bold</item>
        <item name="android:textColor">@color/main_blue</item>
    </style>

    <style name="AlertDialogTheme.StrongNegative.ButtonStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/d_din_bold</item>
        <item name="android:textColor">@color/red_bg</item>
    </style>

    <style name="AlertDialogTheme.Neutral.ButtonStyle" parent="Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:fontFamily">@font/d_din</item>
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <!-- Custom Dialogs -->
    <style name="Dialog" parent="AppTheme" />

    <style name="Dialog.Title" parent="Dialog">
        <item name="android:fontFamily">@font/d_din_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_subtitle</item>
    </style>

    <style name="Dialog.Button" parent="Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Dialog.Button.Confirm" parent="Dialog.Button">
        <item name="android:background">@color/main_blue</item>
    </style>

    <style name="Dialog.Button.Cancel" parent="Dialog.Button">
        <item name="android:background">@color/black</item>
    </style>

    <style name="DatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/main_blue</item>
    </style>

    <style name="TextTitle" parent="AppTheme">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSubtitle" parent="AppTheme">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CountryPickerStyle">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:colorControlNormal">@color/main_blue</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="SegmentedGroup" parent="@android:style/Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="Switch" parent="AppTheme">
        <item name="android:colorControlActivated">@color/main_blue</item>
    </style>
</resources>
